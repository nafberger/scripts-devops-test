<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <appSettings>
    <add key="CompanyName" value="Integra Scripts Test" />
    <add key="Environment" value="Development" />
  </appSettings>
  
  <connectionStrings>
    <!-- Example connection string - update for your environment -->
    <add name="DefaultConnection" connectionString="Data Source=localhost;Initial Catalog=IntegraScriptsTest;Integrated Security=True" providerName="System.Data.SqlClient" />
  </connectionStrings>

  <system.web>
    <!-- Compilation settings for .NET Framework 4.7.2 -->
    <compilation debug="true" targetFramework="4.7.2" />
    
    <!-- HTTP Runtime settings -->
    <httpRuntime targetFramework="4.7.2" maxRequestLength="51200" executionTimeout="300" />
    
    <!-- Authentication mode -->
    <authentication mode="Forms">
      <forms loginUrl="~/Login.aspx" timeout="30" />
    </authentication>
    
    <!-- Session state -->
    <sessionState mode="InProc" timeout="30" />
    
    <!-- Custom errors -->
    <customErrors mode="Off" />
    
    <!-- Pages settings to match legacy Web Forms -->
    <pages controlRenderingCompatibilityVersion="4.0" clientIDMode="AutoID" />
    
    <!-- Trust level -->
    <trust level="Full" />
  </system.web>

  <system.webServer>
    <!-- Default document -->
    <defaultDocument>
      <files>
        <clear />
        <add value="Default.aspx" />
      </files>
    </defaultDocument>
    
    <!-- Static file handling -->
    <staticContent>
      <remove fileExtension=".woff" />
      <mimeMap fileExtension=".woff" mimeType="application/font-woff" />
    </staticContent>
  </system.webServer>

  <!-- Runtime settings for assembly binding -->
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <!-- Add assembly redirects here as needed -->
    </assemblyBinding>
  </runtime>
</configuration>